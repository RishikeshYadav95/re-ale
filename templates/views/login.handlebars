<div class="sidenav">
  <div class="login-main-text">
    <h1>Login Page</h1>
    <p>Login to access re$ale</p>
  </div>
</div>
<div class="main">
  {{>navbar}}
  <div class="col-md-5 col-sm-12">
    <div class="login-form">
      <form id="login-form">
        <div class="mb-3">
          <div class="alert alert-danger" role="alert" id="loginAlert">{{error}}</div>
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            aria-describedby="usernameHelp"
            oninput="removeErrorClass(this)"
          />
          <div id="usernameHelp" class="form-text">We'll never share your
            username with anyone else.</div>
          <div id="invalid-username-label" class="invalid-feedback">
            Please enter username
          </div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            id="password"
            oninput="removeErrorClass(this)"
            title="Password must contain atleast"
            data-content="6 characters</br>One upper case character</br>One lower case character</br>One number</br>One special character"
            data-html="true"
            data-placement="bottom"
            data-toggle="popover"
            data-trigger="hover"
          />
          <div id="invalid-password-label" class="invalid-feedback">
            Please enter password
          </div>
        </div>
        <div id="error-div" class="alert alert-danger visually-hidden" role="alert">
          Either username or password is invalid
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        {{!-- <a class="btn btn-primary" href="/users/add">Register</a> --}}
      </form>
      <p id="signUpMsg">New user? Click Signup in the Navigation Bar to Create an Account.</p>
    </div>
  </div>
</div>
